<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/bkgColorGr"
    tools:context="com.example.mahmoudhany.mystudio_v1.GalleryActivity">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/imgView"
         />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/effectsList"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Choose Effect from the list below:"
        android:textColor="@color/red"
        android:layout_marginLeft="13dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/textView2"
        android:layout_above="@+id/effectsList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--image view old attributes-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_width="wrap_content"-->

    <!--android:layout_toRightOf="@+id/imgView"-->
    <!--android:layout_toEndOf="@+id/imgView"-->
</RelativeLayout>
